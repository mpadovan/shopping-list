<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <description>Path on the server where the user avatars are stored.</description>
        <param-name>avatarsFolder</param-name>
        <param-value>/home/giulia/Desktop/WebProject/ProgettoDefinitivo/ShoppingList/userFiles/images/avatar</param-value>
    </context-param>
    <filter>
        <filter-name>RootFilter</filter-name>
        <filter-class>it.unitn.webprog2018.ueb.shoppinglist.filters.RootFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RootFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
	<filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>it.unitn.webprog2018.ueb.shoppinglist.filters.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/restricted/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
	<filter>
        <filter-name>AdministrationFilter</filter-name>
        <filter-class>it.unitn.webprog2018.ueb.shoppinglist.filters.AdministrationFilter</filter-class>
    </filter>
	<!-- TODO consider having the filter mapped to the URL of the single admin page -->
    <filter-mapping>
        <filter-name>AdministrationFilter</filter-name>
        <url-pattern>/restricted/admin/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>it.unitn.webprog2018.ueb.shoppinglist.listeners.DBListener</listener-class>
    </listener>
	
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>it.unitn.webprog2018.ueb.shoppinglist.servlets.auth.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignUpServlet</servlet-name>
        <servlet-class>it.unitn.webprog2018.ueb.shoppinglist.servlets.auth.SignUpServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountConfirmationServlet</servlet-name>
        <servlet-class>it.unitn.webprog2018.ueb.shoppinglist.servlets.auth.AccountConfirmationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>it.unitn.webprog2018.ueb.shoppinglist.servlets.auth.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignUpServlet</servlet-name>
        <url-pattern>/SignUp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountConfirmationServlet</servlet-name>
        <url-pattern>/AccountConfirmation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/restricted/Logout</url-pattern>
    </servlet-mapping>
	<servlet>
        <servlet-name>AdminPage</servlet-name>
        <jsp-file>/adminPage.html</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminPage</servlet-name>
        <url-pattern>/restricted/admin/adminPage.html</url-pattern>
    </servlet-mapping>
