    </servlet>
    <servlet-mapping>
        <servlet-name>SignUp</servlet-name>
        <url-pattern>/signUp.html</url-pattern>
    </servlet-mapping>
	-->
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
