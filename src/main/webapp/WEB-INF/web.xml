	<servlet>
        <servlet-name>LoginOK</servlet-name>
        <jsp-file>/views/LoginOK.html</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginOK</servlet-name>
        <url-pattern>/restricted/loginOK.html</url-pattern>
    </servlet-mapping>
	<servlet>
